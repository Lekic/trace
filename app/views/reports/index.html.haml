%header.clearfix
	.pull-left
		%h2 Reports
	.pull-right
		= link_to "Generate Report", new_report_path, :class => "btn btn-primary"
%hr
%table.table.table-striped
	%tr
		%th Report ID
		%th Name
		%th Created by
		%th Created on
		%th Edit
		%th Delete
	- @reports.each do |report|
		%tr
			%td= link_to report.id, report_path(report)
			%td= report.name
			%td= report.user.name
			%td= report.created_at.strftime("%m/%d/%Y")
			%td= link_to "Edit", edit_report_path(report)
			%td= link_to "Delete", report_path(report), method: :delete, data: { confirm: "Are you sure you want to delete this entry?" }