%h1 Edit User
- if @user.errors.any?
	.alert.alert-danger
		=pluralize(@user.errors.count, "error")
		prohibited this post from being saved:
		%ul
			- @user.errors.full_messages.each do |msg|
				%li= msg

= semantic_form_for @user, :html => { :class => "form-horizontal" } do |f|
	= f.inputs do
		= f.input :employee_id
		= f.input :username
		= f.input :name
		= f.input :email
		= f.input :password
		= f.date_select :date_of_birth, { :include_blank => true, :start_year => 1960, :end_day => Time.now }
		= f.date_select :date_joined, { :include_blank => true, :start_year => 1990, :end_day => Time.now }
		= f.input :park
		= f.inputs :name => "Contact Details", :for => :phone do |phone_form|
			= phone_form.input :country_code
			= phone_form.input :area_code
			= phone_form.input :phone
			= phone_form.input :phone_type
			= phone_form.input :user_id, :as => :hidden, :value => @user.id
			= phone_form.input :comment

	= f.actions do
		= f.action :submit
		= f.action :cancel, :label => "Go Back"