%table
	%tr
		%th Name
		%th Email
		%th Date of Birth
		%th Date Joined
		%th Username
		%th Phone
		%th Occupation
		%th Admin
		%th Date Joined
		%th Edit User
		%th Delete
	- @users.each do |user|
		%tr
			%td= link_to user.name, user_path(user)
			%td= user.email
			%td= user.date_of_birth
			%td= user.date_joined
			%td= user.username
			%td= user.contact_number
			- if !user.person_type.nil?
				%td= user.person_type.name
			%td= user.admin
			%td= user.date_joined
			%td= link_to "Edit", edit_user_path(user)
			%td= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this entry?" }