%h1 Registered Users

= link_to "Create New User", new_user_registration_path

%table
	%tr
		%th Name
		%th Email
		%th Date of Birth
		%th Username
		%th Password
		%th Date Joined
		%th Edit User
		%th Delete
	- @users.each do |user|
		%tr
			%td= link_to user.name, user_path(user) # can also be written as just 'pest'
			%td= user.email
			%td= user.date_of_birth
			%td= user.username
			%td= user.password
			%td= user.date_joined
			%td= link_to "Edit", user_registration_path(user)
			%td= link_to "Delete", destroy_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this entry?" }