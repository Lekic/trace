%table
	%tr
		%th Name
		%th Email
		%th Date of Birth
		%th Username
		%th Phone
		%th Occupation
		%th Admin
		%th Date Joined
		%th Edit User
		%th Delete
	- @users.each do |user|
		%tr
			%td= link_to user.name, user_path(user)
			%td= user.email
			%td
				- if !user.date_of_birth.nil?
					= user.date_of_birth.strftime("%m/%d/%Y")
				- else
					= "Not specified"
			%td= user.username
			%td
				- if !user.contact_number.nil?
					= user.contact_number
				- else
					= "Not specified"
			%td
				- if !user.person_type.nil?
					= user.person_type.name
				- else
					= "Not specified"
			%td= user.admin
			%td= user.created_at.strftime("%m/%d/%Y")
			%td= link_to "Edit", edit_user_path(user)
			%td= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this entry?" }