- if @user.errors.any?
	#errorExplanation
		%h2
			=pluralize(@user.errors.count, "error")
			prohibited this post from being saved:
		%ul
			- @user.errors.full_messages.each do |msg|
				%li= msg

= form_for @user do |f|
	%p
		= f.label :name
		%br
		= f.text_field :name
	%p
		= f.label :email
		%br
		= f.text_field :email
	%p
		= f.label :username
		%br
		= f.text_field :username
	%p
		= f.label :password
		%br
		= f.password_field :password
	
	
	%p
		= f.submit