%h2 New User

= semantic_form_for @user, :html => { :class => "form-horizontal" } do |f|
	= f.semantic_errors *f.object.errors.keys
	= f.inputs do
		=# f.input :employee_id
		= f.input :username
		= f.input :name
		= f.input :email
		= f.input :password
		= f.date_select :date_of_birth, { :include_blank => true, :start_year => 1960, :end_day => Time.now }
		= f.input :park
		= f.input :contact_number

	= f.actions do
		= f.action :submit
		= f.action :cancel, :label => "Go Back"