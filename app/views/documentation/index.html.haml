#documentation.row
	#documentation-nav.col-md-3.col-md-offset-1
		%ul.nav.nav-stacked.side-nav.affix
			%li.dropdown
				= link_to 'Introduction', "#", "data-toggle" => "dropdown", :class => "dropdown-toggle"
				%ul.dropdown-menu
					%li= link_to 'Purpose', "#purpose"
					%li= link_to 'Conventions', "#conventions"
					%li= link_to 'Audience', "#audience"
					%li= link_to 'Scope', "#scope"
			%li= link_to 'Overall Description', "#description"
			%li= link_to 'Functional Requirements', "#functionalrequirements"
			%li= link_to 'Non-Functional Requirements', "#nonfunctionalrequirements"
			%li= link_to 'Testing and Implementation', "#systemdocumentation"
