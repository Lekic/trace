.center.col-lg-10.col-lg-offset-1

	= image_tag("logo-large.png", :id => "logo")

	%p.title-1 Trace is a collection of pests and their sightings throughout New South Wales national parks.

	%p.title-2 You submit sightings of pests to help us keep your national parks safe.

	- if user_signed_in?
		= link_to "Welcome back @" + current_user.username + "!", index_path, :class => "btn btn-primary btn-lg"
	- else
		%button.btn.btn-primary.btn-lg{"data-toggle" => "modal", href: "#myModal"} Get Started

	= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" }) do |f|
		#myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
			.modal-dialog
				.modal-content
					.modal-header
						%button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"}
						%h4.modal-title Sign in
					.modal-body
						.form-group
							= f.label :login, :class => "col-sm-2 col-sm-offset-1 col-xs-3 control-label"
							.col-sm-8.col-xs-9
								= f.text_field :login, :autofocus => true, :class => "form-control", :required => "required"
						.form-group
							= f.label :password, :class => "col-sm-2 col-sm-offset-1 col-xs-3 control-label"
							.col-sm-8.col-xs-9
								= f.password_field :password, :class => "form-control", :required => "required"
						- if devise_mapping.rememberable?
							.row
								.col-sm-6.col-sm-offset-3.col-xs-12.text-left
									= f.check_box :remember_me
									= f.label :remember_me
							%br
							.row
								.col-sm-6.col-sm-offset-3.text-left
									=# render "devise/shared/links"
									- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
										= link_to "Forgot your password?", new_password_path(resource_name)
							.row
								.col-sm-6.col-sm-offset-3.text-left
									- if devise_mapping.registerable? && controller_name != 'registrations'
										= link_to "Don't have an account? Sign up!", new_registration_path(resource_name)
					.modal-footer
						%button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
						= f.submit "Sign in", :class => "btn btn-primary btn-success"