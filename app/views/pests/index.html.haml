.isotope-header.clearfix
	.pull-left
		%h2 Recorded Pests
	.pull-right
		%select#pest-filter.chosen-select
			%option All
			- @types.each do |type|
				%option
					= type.name
		= link_to "Create New Pest", new_pest_path, :class => "btn btn-primary"
.isotope
	- @pests.each do |pest|
		= link_to pest_path(pest), :class => "col-md-3 type-" + pest.pest_type.name.downcase.squish.gsub( /\s/, '_' ) do
			.isotope-item-wrapper
				= image_tag("temp-pest.jpg")
				%p
					Name:
					= pest.name
				%p
					Pest type:
					= pest.pest_type.name
				%p
					Source:
					= pest.source.name
				%p
					Size:
					= pest.size
				%p
					Colour:
					= pest.colour.name
				%p
					Characteristics:
					= pest.characteristics