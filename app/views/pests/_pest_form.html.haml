- if @pest.errors.any?
	.alert.alert-danger
		=pluralize(@pest.errors.count, "error")
		prohibited this post from being saved:
		%ul
			- @pest.errors.full_messages.each do |msg|
				%li= msg

= semantic_form_for @pest, :html => { :class => "form-horizontal" } do |f|
	= f.inputs do
		= f.input :name, :input_html => { :class => "form-control" }
		= f.input :pest_type, :input_html => { :class => "chosen-select" }
		= f.input :avatar, as: :file, label: "Photo"
		= f.input :source, :input_html => { :class => "chosen-select" }
		= f.input :tracker_id, :input_html => { :class => "form-control" }
		= f.input :size, label: "Size (cm)", :input_html => { :class => "form-control" }
		= f.input :colour, :input_html => { :class => "chosen-select" }
		= f.input :markings, :as => :check_boxes
		= f.input :characteristics, :input_html => { :class => "form-control" }
	= f.actions do
		.pull-right
			= f.action :cancel, :as => :link, :label => "Cancel", :button_html => { :class => "btn btn-default" }
			= f.action :submit, :as => :button, :label => "Submit", :button_html => { :class => "btn btn-success" }
