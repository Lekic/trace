%h1 Create New Pest

- if @pest.errors.any?
	#errorExplanation
		%h2
			=pluralize(@pest.errors.count, "error")
			prohibited this post from being saved:
		%ul
			- @pest.errors.full_messages.each do |msg|
				%li= msg

= semantic_form_for @pest, :html => { :class => "form-horizontal" } do |f|
	= f.inputs do
		.form-group
			= f.input :name, :input_html => { :class => 'form-control' }
		= f.input :pest_type
		= f.input :source
		= f.input :size
		= f.input :colour
		= f.input :markings, :as => :check_boxes
		= f.input :characteristics
	= f.actions do
		= f.action :submit, :as => :button, :label => "Submit"
		= f.action :cancel, :as => :link, :label => "Go Back"