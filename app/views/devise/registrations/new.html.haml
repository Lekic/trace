.row
	.col-lg-6.col-lg-offset-3

		%h2 Sign up

		= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f|
			= devise_error_messages!
			.form-group
				= f.label :username, :class => "col-lg-2 control-label"
				.col-lg-10.input-group
					%span{:class => "input-group-addon"} @
					= f.text_field :username, :class => "form-control", :required => "required", :autofocus => true
			.form-group
				= f.label :name, :class => "col-lg-2 control-label"
				.col-lg-10
					= f.text_field :name, :class => "form-control", :required => "required"
			.form-group
				= f.label :email, :class => "col-lg-2 control-label"
				.col-lg-10
					= f.email_field :email, :class => "form-control", :required => "required"
			.form-group
				= f.label :password, :class => "col-lg-2 control-label"
				.col-lg-10
					= f.password_field :password, :class => "form-control", :required => "required"
			= f.submit "Sign up", :class => "btn pull-right"

		= render "devise/shared/links"