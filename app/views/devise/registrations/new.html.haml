.row
	.col-lg-6.col-lg-offset-3

		%h2 Sign up

		= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
			= devise_error_messages!
			= f.inputs do
				= f.input :username, input_html: { :class => "form-control"}, required: "required"
				= f.input :name, input_html: { :class => "form-control"}, required: "required"
				= f.input :email, input_html: { :class => "form-control"}, required: "required"
				= f.input :password, input_html: { :class => "form-control"}, required: "required"
			= f.actions do
				= f.action :submit, label: "Sign up", :class => "btn pull-right"
				= f.action :cancel, :label => "Go Back"